{
    "name": "hue-code",
    "icon": "media/icon-dark-circle-128.png",
    "galleryBanner": {
        "color": "#ffffff",
        "theme": "dark"
    },
    "displayName": "Hue Code",
    "description": "Make your hue lights come to life as you code.",
    "version": "0.1.5",
    "publisher": "fe26labs",
    "engines": {
        "vscode": "^1.27.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/matthewbill/hue-code.git"
    },
    "keywords": [
        "hue",
        "code",
        "lights"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "huecode.displayMenu",
                "title": "Hue Code Menu"
            },
            {
                "command": "huecode.refreshGroups",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "huecode.viewGroupInfo",
                "title": "View Info"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "hue-code",
                    "title": "Hue Code",
                    "icon": "media/light-bulb.svg"
                }
            ]
        },
        "views": {
            "hue-code": [
                {
                    "id": "bridges",
                    "name": "Bridges"
                },
                {
                    "id": "groups",
                    "name": "Groups"
                },
                {
                    "id": "lights",
                    "name": "Lights"
                },
                {
                    "id": "sensors",
                    "name": "Sensors"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "eslint": "5.14.0",
        "eslint-config-airbnb": "17.1.0",
        "eslint-config-mdb": "0.1.1",
        "eslint-plugin-import": "2.14.0",
        "eslint-plugin-jsx-a11y": "6.1.1",
        "eslint-plugin-react": "7.11.1",
        "typescript": "2.9.2",
        "vscode": "1.1.34"
    },
    "dependencies": {
        "axios": "0.21.1"
    }
}
